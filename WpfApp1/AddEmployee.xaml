        <Label Content="שכר" HorizontalAlignment="Left" Margin="626,367,0,0" VerticalAlignment="Top" Width="86"/>
        <TextBox  x:Name="tb_salary" HorizontalAlignment="Left" Height="23" Margin="463,371,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>

    </Grid>
</Window>
